@model ToDoListApp.Models.ToDoItem
<h2>Add New To-Do Items</h2>

<form asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="IsComplete"></label>
        <input asp-for="IsComplete" />
    </div>
    <div>
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="date" />
    </div>
    <button type="submit">Add</button>
</form>

