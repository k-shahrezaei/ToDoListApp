@model ToDoListApp.Models.ToDoItem

<h2>Are you sure you want to delete this?</h2>

<div>
    <h4>To-Do Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsComplete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
        <!-- Include other fields as necessary -->
    </dl>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-action no-color">
            <input type="submit" value="Delete" class="btn btn-defualt" /> |
            @Html.ActionLink("Back to Index List","Index")        
            </div>
            }

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    @Html.ActionLink("Back to Index List", "Index")
</form>
</div>


